@model Vidly.ViewModels.MoviesIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
    <btn>@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })</btn>

</p>
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>

    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            let table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    
                    {
                        data: "genre.name"
                    },
                    {
                        data: "price",
                        render: function (data) {
                            return "$" + data;
                        }
                    }
                ]
            });
        })
    </script>
}


